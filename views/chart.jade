extends layout

block content

    h3= "Publication Distribution in Years:"
    div(style="height:10px")
    div.uk-panel-box
        h4.uk-comment-title 
                Using Using Chart.js with Jade to analyze the distribution for publication data with articles.
    div(style="height:10px")
    ul.uk-tab(data-uk-tab="{connect:'#chart'}")
        li.uk-active
            a Animals
        li
            a Outpatients
        li
            a Humans
        li
            a Neoplasms
        li
            a Biometry
        li
            a physiology
        li
            a more..

    canvas#myChart(width='200', height='200')
    script.
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [#{key}],
                datasets: [{
                    label: '# of Articles',
                    data: [#{value}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
